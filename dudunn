    },
    "Saturday": {
        "รุ่งเรือง": ["ฟ้า", "น้ำเงิน"],
        "เสริมรวย": ["แดง"],
        "เสริมเมตตา": ["ชมพู"],
        "ห้ามใส่": ["เขียว"]
    }
}

def show_daily():
    today = datetime.date.today()
    weekday_en = today.strftime("%A")
    thai_date = today.strftime("%-d %B %Y")

    print(f"## วันนี้วัน{weekday_en} — วันที่ {thai_date}\n")

    # ดวงประจำวัน
    horoscope = daily_horoscope.get(weekday_en)
    if horoscope:
        for aspect, detail in horoscope.items():
            print(f"- {aspect}: {detail}")
    else:
        print("ขออภัย ยังไม่มีคำทำนายสำหรับวันนี้")

    print("\n### สีเสื้อมงคล")
    colors = shirt_colors.get(weekday_en)
    if colors:
        print(f"- รุ่งเรือง: {', '.join(colors['รุ่งเรือง'])}")
        print(f"- เสริมรวย: {', '.join(colors['เสริมรวย'])}")
        print(f"- เสริมเมตตา: {', '.join(colors['เสริมเมตตา'])}")
        print(f"- ห้ามใส่: {', '.join(colors['ห้ามใส่'])}")
    else:
        print("ไม่พบข้อมูลสีเสื้อมงคลของวันนี้")

if __name__ == "__main__":
    show_daily()
